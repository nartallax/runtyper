{ 
    "exclude": [
        "./test_projects/*"
    ],

    "imploderConfig": {
        "entryModule": "test_project_main.ts",
        "entryFunction": "main",
        "outFile": "js/bundle.js",
        "target": "es2018",
        "profiles": {
            "development": {
                "watchMode": true,
                "httpPort": 24253
            }
        }
    },

    "compilerOptions": {
        "lib": [
            "dom",
            "es2018"
        ],

        "plugins": [
            {
                "transform": "../target/runtyper.js", 
                "type":"imploder",
                "moduleName": "/../target/runtyper",
                "moduleIdentifier": "__RuntyperAutogeneratedImport"
            }
        ],

        "baseUrl": "./",
        "paths": {
            "*": [
                "./*"
            ]
        },

        "outDir": "js/main",

        "allowJs": false,

        "noErrorTruncation": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",

        "noImplicitUseStrict": false,
        "alwaysStrict": true,
        "newLine": "lf",
        "noEmitOnError": true,
        "pretty": false,
        "removeComments": true,
        "sourceMap": false,
        "charset": "utf8",
        "declaration": false,
        "emitBOM": false,
        
        "module": "amd",
        "target": "es2018",

        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noStrictGenericChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    }
}
